
@model SOP.ViewModels.Listeleme
@using SOP.ViewModels
@{
    ViewBag.Title = "SOP";
    Layout = "~/Views/Shared/_LayoutKullanici.cshtml";
}
<script>
        function GetClientReport() {
            window.open('/Home/GetReport?id' + '='
                + @ViewBag.ID, "_blank");
        };
</script>
<head>
    <link rel="stylesheet" href="~/Content/docsupport/chosen.css">
</head>
<h2 style=" text-align: center;font-weight: bold;font-size:25px;margin-left:40px;">SOP GÖRÜNTÜLEME</h2>
<hr />
<form enctype="multipart/form-data" style="border:1px solid black; padding:5%;margin-left:5%; margin-right:5%;">


    <div class="row">
        <div class="col-md-3">  </div>
        <div class="col-md-3">
            <label for="tanim" style="display: inline-block;margin-bottom: 5px;font-weight: bold;font-size:20px;">SOP Başlığı:</label>
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.sopKayit.baslik, new { style = "width: 53%;padding-left:0px; padding-right:2px; height:90px; word-wrap:break-word;", disabled = "disabled" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">  </div>
        <div class="col-md-3"><label for="tarih" style=" display: inline-block;margin-bottom: 5px;font-weight: bold;font-size:20px;">Dosya Seç:</label></div>
        <div class="col-md-6">
            <button onclick="GetClientReport()" class="btn btn-default align-center" style="border:1px solid black; width:37%">Dosyayı Görüntüle</button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">  </div>
        <div class="col-md-3"><label for="m_durum" style=" display: inline-block;margin-bottom: 5px;font-weight: bold;font-size:20px;">Sorumlu Personeller ve         Onaylama Tarihleri:</label></div>
        <div class="col-md-6">
            @foreach (var item in Model.sopOnay)
            {
                @Html.TextAreaFor(model => item.sopUser.adSoyad, new { style = "width: 53%;padding-left:0px; padding-right:2px; height:45px; word-wrap:break-word;", disabled = "disabled" })<br />
                @Html.TextAreaFor(model => item.tarih, new { style = "width: 53%;padding-left:0px; padding-right:2px; height:45px; word-wrap:break-word;", disabled = "disabled" })<br />
                
            }

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">  </div>
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <a href="/Home/onaylanmisSOP">
                <input type="button" value="GERİ DÖN" name="GERİ" class="btn btn-default" style="background-color:#0c0c0c; color:white;" />
            </a>
        </div>
    </div>
    <script src="~/Content/docsupport/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Content/docsupport/chosen.jquery.js" type="text/javascript"></script>
    <script src="~/Content/docsupport/init.js" type="text/javascript" charset="utf-8"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</form>

